<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Shop_Wallet">

    <ImageView
        android:id="@+id/iVwallet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_25"
        android:layout_marginTop="@dimen/dp_25"
        android:src="@drawable/ic_backblue_"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/TvWallet1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:gravity="center"
        android:text="@string/shop"
        android:textSize="@dimen/sp_25"

        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="@id/iVwallet" />

    <LinearLayout
        android:id="@+id/LinearShopWallet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_15"
        android:orientation="horizontal"
        android:weightSum="2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/TvWallet1">

        <TextView
            android:id="@+id/TvinLinear1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_10"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/shop"
            android:textAllCaps="true"
            android:textColor="@color/lightGrey"
            android:textSize="@dimen/sp_20"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/TvinLinear2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_10"
            android:layout_weight="1"
            android:gravity="center"
            android:text="WALLET"
            android:textColor="@color/appBlue"

            android:textSize="@dimen/sp_20"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:id="@id/Li2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/LinearShopWallet">

        <View
            android:layout_width="wrap_content"
            android:layout_height="3dp"
            android:layout_weight="1"
            android:background="@color/lightGrey" />

        <View
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_5"
            android:layout_weight="1"
            android:background="@color/appBlue" />

    </LinearLayout>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineWallet1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="25dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineWallet2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="375dp" />
    <TextView
        android:id="@+id/TvWallet2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/Li2"
        app:layout_constraintStart_toStartOf="@id/guidelineWallet1"
        android:text="My Items"
        android:textSize="@dimen/sp_20"
        android:textColor="@color/lightGrey"
        android:layout_marginTop="@dimen/dp_20"/>
    <View
        android:id="@+id/V1Wallet"
        android:layout_width="0dp"
        android:layout_height="@dimen/dp_2"
        app:layout_constraintStart_toStartOf="@id/guidelineWallet1"
        app:layout_constraintEnd_toEndOf="@id/guidelineWallet2"
        app:layout_constraintTop_toBottomOf="@id/TvWallet2"
        android:background="@color/light"
        android:layout_marginTop="@dimen/dp_20"/>
    <ImageView
        android:id="@+id/Ivdiscover"
        android:layout_width="@dimen/dp_80"
        android:scaleType="fitXY"
        android:layout_height="@dimen/dp_100"
        app:layout_constraintTop_toBottomOf="@id/V1Wallet"
        android:layout_marginTop="@dimen/dp_25"
        app:layout_constraintStart_toStartOf="@id/guidelineWallet1"
        android:src="@drawable/discoverlikes"/>
    <TextView
        android:id="@+id/Tvdiscover"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/Ivdiscover"
        android:text="@string/discover_likes"
        app:layout_constraintTop_toTopOf="@id/Ivdiscover"
        android:textSize="@dimen/sp_25"
        android:textColor="@color/blacklight"
        android:layout_marginLeft="@dimen/dp_20"/>
    <TextView
        android:id="@+id/Tvdiscoverlikestext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/Tvdiscover"
        app:layout_constraintLeft_toLeftOf="@id/Tvdiscover"
        android:text="@string/discoverLikesTesxt"
        android:textSize="@dimen/sp_15"
        android:textColor="@color/blacklight"/>
    <View
        android:id="@+id/V2Wallet"
        android:layout_width="0dp"
        android:layout_height="@dimen/dp_2"
        app:layout_constraintStart_toStartOf="@id/guidelineWallet1"
        app:layout_constraintEnd_toEndOf="@id/guidelineWallet2"
        app:layout_constraintTop_toBottomOf="@id/Tvdiscoverlikestext"
        android:background="@color/light"
        android:layout_marginTop="@dimen/dp_20"/>
    <TextView
        android:id="@+id/TvWallet3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/guidelineWallet1"
        app:layout_constraintTop_toBottomOf="@id/V2Wallet"
        android:textSize="@dimen/sp_15"
        android:layout_marginTop="@dimen/dp_20"
        android:textStyle="bold"
        android:textColor="@color/lightGrey"
        android:text="@string/other_item"/>
    <View
        android:id="@+id/V3Wallet"
        android:layout_width="0dp"
        android:layout_height="@dimen/dp_2"
        app:layout_constraintStart_toStartOf="@id/guidelineWallet1"
        app:layout_constraintEnd_toEndOf="@id/guidelineWallet2"
        app:layout_constraintTop_toBottomOf="@id/TvWallet3"
        android:background="@color/light"
        android:layout_marginTop="@dimen/dp_20"/>

    <!--second image-->
    <ImageView
        android:id="@+id/Ivreopen"
        android:layout_width="@dimen/dp_80"
        android:scaleType="fitXY"
        android:layout_height="@dimen/dp_80"
        app:layout_constraintTop_toBottomOf="@id/V3Wallet"
        android:layout_marginTop="@dimen/dp_25"
        app:layout_constraintStart_toStartOf="@id/guidelineWallet1"
        android:src="@drawable/reopen"/>
    <TextView
        android:id="@+id/Tvreopenchat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/Ivreopen"
        android:text="@string/reopen_chat"
        app:layout_constraintTop_toTopOf="@id/Ivreopen"
        android:textSize="@dimen/sp_25"
        android:textColor="@color/blacklight"
        android:layout_marginLeft="@dimen/dp_20"/>
    <TextView
        android:id="@+id/Tvrepenchat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/Tvreopenchat"
        app:layout_constraintLeft_toLeftOf="@id/Tvdiscover"
        android:text="@string/reopenchat_text"
        android:textSize="@dimen/sp_15"
        android:textColor="@color/blacklight"/>
    <View
        android:id="@+id/V4Wallet"
        android:layout_width="0dp"
        android:layout_height="@dimen/dp_2"
        app:layout_constraintStart_toStartOf="@id/guidelineWallet1"
        app:layout_constraintEnd_toEndOf="@id/guidelineWallet2"
        app:layout_constraintTop_toBottomOf="@id/Tvrepenchat"
        android:background="@color/light"
        android:layout_marginTop="@dimen/dp_20"/>




</androidx.constraintlayout.widget.ConstraintLayout>