<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Qualification">

    <TextView
        android:id="@+id/tvSettle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="50dp"
        android:padding="10dp"
        android:textStyle="bold"
        android:text="What's your highest degree ?"
        android:textSize="31sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/ethnicityPrevious"
        android:layout_width="55dp"
        android:layout_height="37dp"
        android:layout_margin="10dp"
        android:layout_marginTop="16dp"
        android:background="@color/white"
        android:src="@drawable/ic_baseline_arrow_back_24"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="140dp"
        />
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="30dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="375dp" />

    <ScrollView
        android:layout_width="327dp"
        android:layout_height="520dp"
        app:layout_constraintBottom_toTopOf="@+id/regliNext"
        app:layout_constraintEnd_toStartOf="@+id/guideline3"
        app:layout_constraintStart_toStartOf="@+id/guideline2"
        app:layout_constraintTop_toBottomOf="@+id/guideline1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/etA"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="55dp"
                    android:layout_marginEnd="20dp"
                    android:padding="12dp"
                    android:text="Bachelors"
                    android:textSize="25sp" />

                <RadioButton
                    android:id="@+id/bachelors"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="270dp"
                    android:layout_marginTop="70dp"
                    android:checked="false" />

                <TextView
                    android:id="@+id/etB"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/etA"
                    android:layout_marginStart="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginEnd="20dp"
                    android:padding="12dp"
                    android:text="Masters"
                    android:textSize="25sp" />

                <RadioButton
                    android:id="@+id/masters"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/bachelors"
                    android:layout_marginHorizontal="270dp"
                    android:layout_marginTop="55dp"
                    android:checked="false" />

                <TextView
                    android:id="@+id/etC"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/etB"
                    android:layout_marginStart="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginEnd="20dp"
                    android:padding="12dp"
                    android:text="@string/mba"
                    android:textSize="23sp" />

                <RadioButton
                    android:id="@+id/mba"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/masters"
                    android:layout_marginHorizontal="270dp"
                    android:layout_marginTop="55dp"
                    android:checked="false" />

                <TextView
                    android:id="@+id/etD"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/etC"
                    android:layout_marginStart="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginEnd="20dp"
                    android:padding="12dp"
                    android:text="PhD"
                    android:textSize="25sp" />

                <RadioButton
                    android:id="@+id/phd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/mba"
                    android:layout_marginHorizontal="270dp"
                    android:layout_marginTop="55dp"
                    android:checked="false" />

                <TextView
                    android:id="@+id/etE"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/etD"
                    android:layout_marginStart="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginEnd="20dp"
                    android:padding="12dp"
                    android:text="MD"
                    android:textSize="25sp" />

                <RadioButton
                    android:id="@+id/nativeAmerican"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/phd"
                    android:layout_marginHorizontal="270dp"
                    android:layout_marginTop="55dp"
                    android:checked="false" />

                <TextView
                    android:id="@+id/etF"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/etE"
                    android:layout_marginStart="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginEnd="20dp"
                    android:padding="12dp"
                    android:text="Doctor of Education"
                    android:textSize="25sp" />

                <RadioButton
                    android:id="@+id/doe"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/nativeAmerican"
                    android:layout_marginHorizontal="270dp"
                    android:layout_marginTop="55dp"
                    android:checked="false" />

                <TextView
                    android:id="@+id/religionNextBtn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/etF"
                    android:layout_marginStart="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginEnd="20dp"
                    android:padding="12dp"
                    android:text="JD"
                    android:textSize="25sp" />

                <RadioButton
                    android:id="@+id/jd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/doe"
                    android:layout_marginHorizontal="270dp"
                    android:layout_marginTop="55dp"
                    android:checked="false" />

                <TextView
                    android:id="@+id/etH"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/religionNextBtn"
                    android:layout_marginStart="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginEnd="20dp"
                    android:padding="12dp"
                    android:text="High School"
                    android:textSize="25sp" />

                <RadioButton
                    android:id="@+id/highSchool"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/jd"
                    android:layout_marginHorizontal="270dp"
                    android:layout_marginTop="55dp"
                    android:checked="false" />

                <TextView
                    android:id="@+id/etI"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/etH"
                    android:layout_marginStart="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginEnd="20dp"
                    android:padding="12dp"
                    android:text="Secondary School"
                    android:textSize="25sp" />

                <RadioButton
                    android:id="@+id/secondarySchool"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/highSchool"
                    android:layout_marginHorizontal="270dp"
                    android:layout_marginTop="55dp"
                    android:checked="false" />

                <TextView
                    android:id="@+id/etJ"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/etI"
                    android:layout_marginStart="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginEnd="20dp"
                    android:padding="12dp"
                    android:text="Associate Degree"
                    android:textSize="25sp" />

                <RadioButton
                    android:id="@+id/associateDegree"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/secondarySchool"
                    android:layout_marginHorizontal="270dp"
                    android:layout_marginTop="55dp"
                    android:checked="false" />

                <TextView
                    android:id="@+id/etK"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/etJ"
                    android:layout_marginStart="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginEnd="20dp"
                    android:padding="12dp"
                    android:text="Diploma"
                    android:textSize="25sp" />

                <RadioButton
                    android:id="@+id/diploma"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/associateDegree"
                    android:layout_marginHorizontal="270dp"
                    android:layout_marginTop="55dp"
                    android:checked="false" />

                <TextView
                    android:id="@+id/etL"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/etK"
                    android:layout_marginStart="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginEnd="20dp"
                    android:padding="12dp"
                    android:text="Other"
                    android:textSize="25sp" />

                <RadioButton
                    android:id="@+id/other"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/diploma"
                    android:layout_marginHorizontal="270dp"
                    android:layout_marginTop="55dp"
                    android:checked="false" />

                <TextView
                    android:id="@+id/etM"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/etL"
                    android:layout_marginStart="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginEnd="20dp"
                    android:padding="12dp"
                    android:textSize="25sp" />
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>
    <Button
        android:id="@+id/regliNext"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginStart="50dp"
        android:layout_marginLeft="50dp"
        android:layout_marginEnd="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginBottom="20dp"
        android:textSize="20sp"
        android:background="@drawable/rectangle_bg"
        android:text="Next"
        android:textAllCaps="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>