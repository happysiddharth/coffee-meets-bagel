<?xml version="1.0" encoding="utf-8"?>
<!-- by Nishant Rishab  -->
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Qualification">

    <TextView
        android:id="@+id/tvSettle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="50dp"
        android:padding="10dp"
        android:textStyle="bold"
        android:text="What's your highest degree ?"
        android:textSize="31sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/imageButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/ic_baseline_arrow_back_24" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="140dp"
        />
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="30dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="375dp" />

    <ScrollView
        android:layout_width="340dp"
        android:layout_height="600dp"
        app:layout_constraintTop_toBottomOf="@+id/guideline1"
        app:layout_constraintEnd_toStartOf="@+id/guideline3"
        app:layout_constraintStart_toStartOf="@+id/guideline2"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="vertical" >
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/etA"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="55dp"
                    android:layout_marginEnd="20dp"
                    android:padding="12dp"
                    android:text="Bachelors"
                    android:textSize="25sp"/>
                <RadioButton
                    android:id="@+id/etA1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="70dp"
                    android:checked="false"
                    android:layout_marginHorizontal="270dp"/>
                <TextView
                    android:id="@+id/etB"
                    android:layout_below="@id/etA"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginEnd="20dp"
                    android:padding="12dp"
                    android:text="Masters"
                    android:textSize="25sp"/>
                <RadioButton
                    android:id="@+id/etB1"
                    android:layout_below="@+id/etA1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="55dp"
                    android:checked="false"
                    android:layout_marginHorizontal="270dp"/>
                <TextView
                    android:id="@+id/etC"
                    android:layout_below="@id/etB"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginEnd="20dp"
                    android:padding="12dp"
                    android:text="MBA"
                    android:textSize="23sp"/>
                <RadioButton
                    android:id="@+id/etC1"
                    android:layout_below="@+id/etB1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="55dp"
                    android:checked="false"
                    android:layout_marginHorizontal="270dp"/>
                <TextView
                    android:id="@+id/etD"
                    android:layout_below="@id/etC"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginEnd="20dp"
                    android:padding="12dp"
                    android:text="PhD"
                    android:textSize="25sp"/>
                <RadioButton
                    android:id="@+id/etD1"
                    android:layout_below="@+id/etC1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="55dp"
                    android:checked="false"
                    android:layout_marginHorizontal="270dp"/>
                <TextView
                    android:id="@+id/etE"
                    android:layout_below="@id/etD"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginEnd="20dp"
                    android:padding="12dp"
                    android:text="MD"
                    android:textSize="25sp"/>
                <RadioButton
                    android:id="@+id/etE1"
                    android:layout_below="@+id/etD1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="55dp"
                    android:checked="false"
                    android:layout_marginHorizontal="270dp"/>
                <TextView
                    android:id="@+id/etF"
                    android:layout_below="@id/etE"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginEnd="20dp"
                    android:padding="12dp"
                    android:text="Doctor of Education"
                    android:textSize="25sp"/>
                <RadioButton
                    android:id="@+id/etF1"
                    android:layout_below="@+id/etE1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="55dp"
                    android:checked="false"
                    android:layout_marginHorizontal="270dp"/>
                <TextView
                    android:id="@+id/etG"
                    android:layout_below="@id/etF"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginEnd="20dp"
                    android:padding="12dp"
                    android:text="JD"
                    android:textSize="25sp"/>
                <RadioButton
                    android:id="@+id/etG1"
                    android:layout_below="@+id/etF1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="55dp"
                    android:checked="false"
                    android:layout_marginHorizontal="270dp"/>
                <TextView
                    android:id="@+id/etH"
                    android:layout_below="@id/etG"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginEnd="20dp"
                    android:padding="12dp"
                    android:text="High School"
                    android:textSize="25sp"/>
                <RadioButton
                    android:id="@+id/etH1"
                    android:layout_below="@+id/etG1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="55dp"
                    android:checked="false"
                    android:layout_marginHorizontal="270dp"/>
                <TextView
                    android:id="@+id/etI"
                    android:layout_below="@id/etH"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginEnd="20dp"
                    android:padding="12dp"
                    android:text="Secondary School"
                    android:textSize="25sp"/>
                <RadioButton
                    android:id="@+id/etI1"
                    android:layout_below="@+id/etH1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="55dp"
                    android:checked="false"
                    android:layout_marginHorizontal="270dp"/>
                <TextView
                    android:id="@+id/etJ"
                    android:layout_below="@id/etI"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginEnd="20dp"
                    android:padding="12dp"
                    android:text="Associate Degree"
                    android:textSize="25sp"/>
                <RadioButton
                    android:id="@+id/etJ1"
                    android:layout_below="@+id/etI1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="55dp"
                    android:checked="false"
                    android:layout_marginHorizontal="270dp"/>
                <TextView
                    android:id="@+id/etK"
                    android:layout_below="@id/etJ"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginEnd="20dp"
                    android:padding="12dp"
                    android:text="Diploma"
                    android:textSize="25sp"/>
                <RadioButton
                    android:id="@+id/etK1"
                    android:layout_below="@+id/etJ1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="55dp"
                    android:checked="false"
                    android:layout_marginHorizontal="270dp"/>
                <TextView
                    android:id="@+id/etL"
                    android:layout_below="@id/etK"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginEnd="20dp"
                    android:padding="12dp"
                    android:text="Other"
                    android:textSize="25sp"/>
                <RadioButton
                    android:id="@+id/etL1"
                    android:layout_below="@+id/etK1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="55dp"
                    android:checked="false"
                    android:layout_marginHorizontal="270dp"/>
                <TextView
                    android:id="@+id/etM"
                    android:layout_below="@id/etL"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginEnd="20dp"
                    android:padding="12dp"
                    android:textSize="25sp"/>
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>
    <Button
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="20dp"
        android:textSize="20sp"
        android:background="@drawable/rectangle_bg"
        android:text="Next"
        android:textAllCaps="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>