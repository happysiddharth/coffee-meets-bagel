<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Setting">

    <ImageView
        android:id="@+id/iVSetting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_35"
        android:layout_marginTop="@dimen/dp_25"
        android:src="@drawable/ic_backblue_"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/Tvsetting1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/settings"
        android:textSize="@dimen/sp_20"

        app:layout_constraintTop_toTopOf="@id/iVSetting" />

    <View
        android:id="@+id/mainViewSetting"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="@dimen/dp_25"
        android:layout_marginBottom="@dimen/dp_25"
        android:background="@color/light"
        app:layout_constraintTop_toBottomOf="@id/iVSetting" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineSetting2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="381dp" />
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineSetting1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="35dp" />

    <TextView
        android:id="@+id/TvSetting2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_15"
        android:text="@string/account"
        android:textStyle="bold"

        android:textColor="@color/blacklight"
        app:layout_constraintStart_toStartOf="@id/guidelineSetting1"
        app:layout_constraintTop_toBottomOf="@id/mainViewSetting" />

    <View
        android:id="@+id/V1"
        android:layout_width="0dp"
        android:layout_height="@dimen/dp_2"
        android:layout_marginTop="@dimen/dp_10"
        app:layout_constraintStart_toStartOf="@id/guidelineSetting1"
        app:layout_constraintEnd_toEndOf="@id/guidelineSetting2"
        app:layout_constraintTop_toBottomOf="@id/TvSetting2"
        android:background="@color/tinygrey"/>
    <TextView
        android:id="@+id/TvSetting3"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginBottom="@dimen/dp_10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Active"
        android:textColor="@color/blacklight"
        android:drawableRight="@drawable/push_btn"
        android:drawablePadding="270dp"
        app:layout_constraintTop_toBottomOf="@id/V1"
        app:layout_constraintStart_toStartOf="@id/guidelineSetting1"/>
    <View
        android:id="@+id/V2"
        android:layout_width="0dp"
        android:layout_height="@dimen/dp_2"
        android:layout_marginTop="@dimen/dp_10"
        app:layout_constraintStart_toStartOf="@id/guidelineSetting1"
        app:layout_constraintEnd_toEndOf="@id/guidelineSetting2"
        app:layout_constraintTop_toBottomOf="@id/TvSetting3"
        android:background="@color/tinygrey"/>
    <TextView
        android:id="@+id/TvSetting4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/guidelineSetting1"
        app:layout_constraintTop_toBottomOf="@id/V2"
        android:layout_marginTop="@dimen/dp_5"
        android:layout_marginBottom="@dimen/dp_5"
        android:text="@string/push_notifications"
        android:textColor="@color/blacklight"
        android:textStyle="bold"/>
    <View
        android:id="@+id/V3"
        android:layout_width="0dp"
        android:layout_height="@dimen/dp_2"
        android:layout_marginTop="@dimen/dp_10"
        app:layout_constraintStart_toStartOf="@id/guidelineSetting1"
        app:layout_constraintEnd_toEndOf="@id/guidelineSetting2"
        app:layout_constraintTop_toBottomOf="@id/TvSetting4"
        android:background="@color/tinygrey"/>
    <TextView
        android:id="@+id/TvSetting5"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginBottom="@dimen/dp_10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/blacklight"
        android:text="@string/daily_noon_alert"
        android:drawablePadding="270dp"
        app:layout_constraintTop_toBottomOf="@id/V3"
        app:layout_constraintStart_toStartOf="@id/guidelineSetting1"/>
    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="@id/guidelineSetting2"
        app:layout_constraintTop_toTopOf="@id/TvSetting5"
        android:paddingRight="@dimen/dp_10"/>

    <View
        android:id="@+id/V4"
        android:layout_width="0dp"
        android:layout_height="@dimen/dp_2"
        android:layout_marginTop="@dimen/dp_10"
        app:layout_constraintStart_toStartOf="@id/guidelineSetting1"
        app:layout_constraintEnd_toEndOf="@id/guidelineSetting2"
        app:layout_constraintTop_toBottomOf="@id/TvSetting5"
        android:background="@color/tinygrey"/>

    <TextView
        android:id="@+id/TvSetting6"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginBottom="@dimen/dp_10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/chats"
        android:textColor="@color/blacklight"
        android:drawablePadding="270dp"
        app:layout_constraintTop_toBottomOf="@id/V4"
        app:layout_constraintStart_toStartOf="@id/guidelineSetting1"/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="@id/guidelineSetting2"
        app:layout_constraintTop_toTopOf="@id/TvSetting6"
        android:src="@drawable/push_btn"
        android:paddingRight="@dimen/dp_10"/>

    <View
        android:id="@+id/V5"
        android:layout_width="0dp"
        android:layout_height="@dimen/dp_2"
        android:layout_marginTop="@dimen/dp_10"
        app:layout_constraintStart_toStartOf="@id/guidelineSetting1"
        app:layout_constraintEnd_toEndOf="@id/guidelineSetting2"
        app:layout_constraintTop_toBottomOf="@id/TvSetting6"
        android:background="@color/tinygrey"/>
    <TextView
        android:id="@+id/TvSetting7"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginBottom="@dimen/dp_10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/customer_service"
        android:textColor="@color/blacklight"
        android:drawablePadding="270dp"
        app:layout_constraintTop_toBottomOf="@id/V5"
        app:layout_constraintStart_toStartOf="@id/guidelineSetting1"/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="@id/guidelineSetting2"
        app:layout_constraintTop_toTopOf="@id/TvSetting7"
        android:src="@drawable/push_btn"
        android:paddingRight="@dimen/dp_10"/>

    <View
        android:id="@+id/V6"
        android:layout_width="0dp"
        android:layout_height="@dimen/dp_2"
        android:layout_marginTop="@dimen/dp_10"
        app:layout_constraintStart_toStartOf="@id/guidelineSetting1"
        app:layout_constraintEnd_toEndOf="@id/guidelineSetting2"
        app:layout_constraintTop_toBottomOf="@id/TvSetting7"
        android:background="@color/tinygrey"/>

    <TextView
        android:id="@+id/TvSetting8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/guidelineSetting1"
        app:layout_constraintTop_toBottomOf="@id/V6"
        android:layout_marginTop="@dimen/dp_5"
        android:layout_marginBottom="@dimen/dp_5"
        android:text="@string/more_information"
        android:textColor="@color/blacklight"
        android:textStyle="bold"/>
    <View
        android:id="@+id/V7"
        android:layout_width="0dp"
        android:layout_height="@dimen/dp_2"
        android:layout_marginTop="@dimen/dp_5"
        app:layout_constraintStart_toStartOf="@id/guidelineSetting1"
        app:layout_constraintEnd_toEndOf="@id/guidelineSetting2"
        app:layout_constraintTop_toBottomOf="@id/TvSetting8"
        android:background="@color/tinygrey"/>
    <TextView
        android:id="@+id/TvSetting9"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginBottom="@dimen/dp_10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/blacklight"
        android:text="@string/privacy_terms_of_services"
        android:drawablePadding="270dp"
        app:layout_constraintTop_toBottomOf="@id/V7"
        app:layout_constraintStart_toStartOf="@id/guidelineSetting1"/>
    <View
        android:id="@+id/V8"
        android:layout_width="0dp"
        android:layout_height="@dimen/dp_2"
        android:layout_marginTop="@dimen/dp_10"
        app:layout_constraintStart_toStartOf="@id/guidelineSetting1"
        app:layout_constraintEnd_toEndOf="@id/guidelineSetting2"
        app:layout_constraintTop_toBottomOf="@id/TvSetting9"
        android:background="@color/tinygrey"/>
    <TextView
        android:id="@+id/TvSetting10"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginBottom="@dimen/dp_10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/blacklight"
        android:text="@string/licences"
        android:drawablePadding="270dp"
        app:layout_constraintTop_toBottomOf="@id/V8"
        app:layout_constraintStart_toStartOf="@id/guidelineSetting1"/>
    <View
        android:id="@+id/V9"
        android:layout_width="0dp"
        android:layout_height="@dimen/dp_2"
        android:layout_marginTop="@dimen/dp_10"
        app:layout_constraintStart_toStartOf="@id/guidelineSetting1"
        app:layout_constraintEnd_toEndOf="@id/guidelineSetting2"
        app:layout_constraintTop_toBottomOf="@id/TvSetting10"
        android:background="@color/tinygrey"/>
    <TextView
        android:id="@+id/TvSetting11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/guidelineSetting1"
        app:layout_constraintTop_toBottomOf="@id/V9"
        android:layout_marginTop="@dimen/dp_5"
        android:layout_marginBottom="@dimen/dp_5"
        android:text="Support"
        android:textColor="@color/blacklight"
        android:textStyle="bold"/>
    <View
        android:id="@+id/V10"
        android:layout_width="0dp"
        android:layout_height="@dimen/dp_2"
        android:layout_marginTop="@dimen/dp_5"
        app:layout_constraintStart_toStartOf="@id/guidelineSetting1"
        app:layout_constraintEnd_toEndOf="@id/guidelineSetting2"
        app:layout_constraintTop_toBottomOf="@id/TvSetting11"
        android:background="@color/tinygrey"/>
    <TextView
        android:id="@+id/TvSetting12"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginBottom="@dimen/dp_10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/blacklight"
        android:text="@string/help"
        android:drawablePadding="270dp"
        app:layout_constraintTop_toBottomOf="@id/V10"
        app:layout_constraintStart_toStartOf="@id/guidelineSetting1"/>
    <View
        android:id="@+id/V11"
        android:layout_width="0dp"
        android:layout_height="@dimen/dp_2"
        android:layout_marginTop="@dimen/dp_10"
        app:layout_constraintStart_toStartOf="@id/guidelineSetting1"
        app:layout_constraintEnd_toEndOf="@id/guidelineSetting2"
        app:layout_constraintTop_toBottomOf="@id/TvSetting12"
        android:background="@color/tinygrey"/>
    <TextView
        android:id="@+id/TvSetting13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/guidelineSetting1"
        app:layout_constraintTop_toBottomOf="@id/V11"
        android:layout_marginTop="@dimen/dp_5"
        android:layout_marginBottom="@dimen/dp_5"
        android:text="Units"
        android:textColor="@color/blacklight"
        android:textStyle="bold"/>
    <LinearLayout
        android:id="@id/linear"
        android:layout_width="0dp"
        android:layout_margin="@dimen/dp_5"
        android:layout_height="@dimen/dp_35"
        app:layout_constraintStart_toStartOf="@id/guidelineSetting1"
        app:layout_constraintEnd_toEndOf="@id/guidelineSetting2"
        app:layout_constraintTop_toBottomOf="@id/TvSetting13"
        android:orientation="horizontal"
        android:weightSum="2"
        android:background="@drawable/rectanglesetting">

        <Button
            android:layout_margin="@dimen/dp_5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/rectanglesetting"
            android:backgroundTint="@color/appBlue"
            android:text="Metric"
            android:textColor="@color/white"/>
        <Button
            android:layout_margin="@dimen/dp_5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Imperial"
            android:textColor="@color/lightGrey"
            android:background="@color/white"/>
    </LinearLayout>
    <View
        android:id="@+id/V12"
        android:layout_width="0dp"
        android:layout_height="@dimen/dp_2"
        android:layout_marginTop="@dimen/dp_25"
        app:layout_constraintStart_toStartOf="@id/guidelineSetting1"
        app:layout_constraintEnd_toEndOf="@id/guidelineSetting2"
        app:layout_constraintTop_toBottomOf="@id/linear"
        android:background="@color/tinygrey"/>
    <Button
        android:id="@+id/BtnSetting"
        android:layout_width="0dp"
        android:layout_height="@dimen/dp_40"
        app:layout_constraintTop_toBottomOf="@id/V12"
        android:background="@drawable/rectanglebutton"
        android:backgroundTint="@color/appBlue"
        android:layout_margin="@dimen/dp_10"
        app:layout_constraintStart_toStartOf="@id/guidelineSetting1"
        app:layout_constraintEnd_toEndOf="@id/guidelineSetting2"
        android:text="Log out"

        android:textColor="@color/white"
        android:textSize="@dimen/sp_20"/>
    <View
        android:id="@+id/V13"
        android:layout_width="0dp"
        android:layout_height="@dimen/dp_2"
        android:layout_marginTop="@dimen/dp_10"
        app:layout_constraintStart_toStartOf="@id/guidelineSetting1"
        app:layout_constraintEnd_toEndOf="@id/guidelineSetting2"
        app:layout_constraintTop_toBottomOf="@id/BtnSetting"
        android:background="@color/tinygrey"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="Delete account"
        android:layout_marginBottom="@dimen/dp_25"
        android:gravity="center"/>










</androidx.constraintlayout.widget.ConstraintLayout>