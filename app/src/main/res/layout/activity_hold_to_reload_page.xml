<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HoldToReloadPage">

    <ImageView
        android:id="@+id/prevoiusPage"
        android:layout_width="21dp"
        android:layout_height="26dp"
        android:layout_marginLeft="@dimen/dp_35"
        android:layout_marginTop="@dimen/dp_20"
        android:src="@drawable/ic_backblue_"
        app:layout_constraintBottom_toTopOf="@+id/guideline13"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/nextPage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_15"
        android:layout_marginRight="16dp"
        android:background="@android:color/transparent"
        android:text="@string/done"
        android:textColor="@color/appBlue"
        android:textSize="@dimen/sp_20"
        app:layout_constraintBottom_toTopOf="@+id/guideline13"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/prevoiusPage"
        app:layout_constraintVertical_bias="1.0" />

    <ImageView
        android:id="@+id/image1"
        android:layout_width="@dimen/dp_90"
        android:layout_height="@dimen/dp_90"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="108dp"
        android:background="@drawable/rectangleedittext"
       android:backgroundTint="@color/lightGrey"
        android:src="@drawable/plus_sign"
        app:layout_constraintStart_toStartOf="@id/prevoiusPage"
        app:layout_constraintTop_toTopOf="@+id/guideline13" />

    <ImageView
        android:id="@+id/image2"
        android:layout_width="@dimen/dp_90"
        android:layout_height="@dimen/dp_90"
        android:layout_marginLeft="@dimen/dp_20"
        android:background="@drawable/rectangleedittext"
        android:backgroundTint="@color/lightGrey"
        android:src="@drawable/plus_sign"
        app:layout_constraintStart_toEndOf="@id/image1"
        app:layout_constraintTop_toTopOf="@id/image1" />

    <ImageView
        android:id="@+id/image3"
        android:layout_width="@dimen/dp_90"
        android:layout_height="@dimen/dp_90"
        android:layout_marginLeft="@dimen/dp_20"
        android:background="@drawable/rectangleedittext"
        android:backgroundTint="@color/lightGrey"
        android:src="@drawable/plus_sign"
        app:layout_constraintStart_toEndOf="@id/image2"
        app:layout_constraintTop_toTopOf="@id/image1" />

    <ImageView
        android:id="@+id/image4"
        android:layout_width="@dimen/dp_90"
        android:layout_height="@dimen/dp_90"
        android:layout_marginTop="@dimen/dp_20"
        android:background="@drawable/rectangleedittext"
        android:backgroundTint="@color/lightGrey"
        android:src="@drawable/plus_sign"
        app:layout_constraintStart_toStartOf="@id/image1"
        app:layout_constraintTop_toBottomOf="@id/image1" />

    <ImageView
        android:id="@+id/image5"
        android:layout_width="@dimen/dp_90"
        android:layout_height="@dimen/dp_90"
        android:layout_marginLeft="@dimen/dp_20"
        android:background="@drawable/rectangleedittext"
        android:backgroundTint="@color/lightGrey"
        android:src="@drawable/plus_sign"
        app:layout_constraintStart_toEndOf="@id/image4"
        app:layout_constraintTop_toTopOf="@id/image4" />

    <ImageView
        android:id="@+id/image6"
        android:layout_width="@dimen/dp_90"
        android:layout_height="@dimen/dp_90"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_20"
        android:background="@drawable/rectangleedittext"
        android:backgroundTint="@color/lightGrey"
        android:src="@drawable/plus_sign"
        app:layout_constraintStart_toEndOf="@id/image2"
        app:layout_constraintTop_toBottomOf="@id/image1" />

    <ImageView
        android:id="@+id/image7"
        android:layout_width="@dimen/dp_90"
        android:layout_height="@dimen/dp_90"
        android:layout_marginTop="@dimen/dp_20"

        android:background="@drawable/rectangleedittext"
        android:backgroundTint="@color/lightGrey"
        android:src="@drawable/plus_sign"
        app:layout_constraintStart_toStartOf="@id/image1"
        app:layout_constraintTop_toBottomOf="@id/image4" />

    <ImageView
        android:id="@+id/image8"
        android:layout_width="@dimen/dp_90"
        android:layout_height="@dimen/dp_90"
        android:layout_marginLeft="@dimen/dp_20"
        android:background="@drawable/rectangleedittext"
        android:backgroundTint="@color/lightGrey"
        android:src="@drawable/plus_sign"
        app:layout_constraintStart_toEndOf="@id/image7"
        app:layout_constraintTop_toTopOf="@id/image7" />

    <ImageView
        android:id="@+id/image9"
        android:layout_width="@dimen/dp_90"
        android:layout_height="@dimen/dp_90"
        android:layout_marginLeft="@dimen/dp_20"
        android:background="@drawable/rectangleedittext"
        android:backgroundTint="@color/lightGrey"
        android:src="@drawable/plus_sign"
        app:layout_constraintStart_toEndOf="@id/image8"
        app:layout_constraintTop_toTopOf="@id/image7" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_50"
        android:gravity="center"
        android:text="@string/hold_to_reorder_tap_to_edit"
        android:textColor="@color/lightGrey"
        android:textSize="@dimen/sp_20"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/image8" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="-13dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="96dp" />


</androidx.constraintlayout.widget.ConstraintLayout>