<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OtpPage">
    <ImageView
        android:id="@+id/IvOtpPage1"
        android:layout_marginTop="@dimen/dp_35"
        android:padding="@dimen/dp_10"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:src="@drawable/ic_backbutton_"

        tools:ignore="ContentDescription,RtlHardcoded" />
    <ImageView
        android:layout_marginTop="@dimen/dp_35"
        android:padding="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:src="@drawable/ic_right_arrow"
        android:layout_marginEnd="@dimen/dp_15" />
    <View
        android:id="@+id/View1"
        android:layout_marginTop="@dimen/dp_35"

 android:layout_marginLeft="@dimen/dp_30"
        android:layout_width="@dimen/dp_60"
        android:layout_height="@dimen/dp_60"
        app:layout_constraintTop_toBottomOf="@id/IvOtpPage1"
        app:layout_constraintLeft_toLeftOf="@id/IvOtpPage1"
        android:background="@drawable/rectangle"/>
    <View
        android:id="@+id/View2"

        android:layout_width="@dimen/dp_60"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_height="@dimen/dp_60"
        app:layout_constraintTop_toTopOf="@id/View1"
        app:layout_constraintLeft_toRightOf="@id/View1"
        android:background="@drawable/rectangle"/>
    <View
        android:id="@+id/View3"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_width="@dimen/dp_60"
        android:layout_height="@dimen/dp_60"
        app:layout_constraintTop_toTopOf="@id/View1"
        app:layout_constraintLeft_toRightOf="@id/View2"
        android:background="@drawable/rectangle"/>
    <View
        android:id="@+id/View4"
        android:layout_width="@dimen/dp_60"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_height="@dimen/dp_60"
        app:layout_constraintTop_toTopOf="@id/View1"
        app:layout_constraintLeft_toRightOf="@id/View3"
        android:background="@drawable/rectangle"/>
    <TextView
        android:id="@+id/Tvotpmessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/View1"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text="@string/otp_timing"
        android:gravity="center"
        android:layout_marginTop="@dimen/dp_50"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/Tvotpmessage"
        android:text="@string/rsend_code"
        android:gravity="center"
        android:layout_marginTop="@dimen/dp_20"/>
    <Button
        android:id="@+id/OtppageBtn"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_80"
        android:background="@drawable/rectanglebutton"
        android:text="@string/verify"
        android:fontFamily="@font/poppins_semibold"


        android:textColor="@color/darkgrey"
        android:backgroundTint="@color/verylight"
        android:layout_margin="@dimen/dp_15"
        android:textStyle="normal"
        app:layout_constraintBottom_toBottomOf="parent"/>



</androidx.constraintlayout.widget.ConstraintLayout>