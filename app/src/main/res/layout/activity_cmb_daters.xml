<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".cmbDaters">

    <ImageView
        android:id="@+id/prevoiusBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:src="@drawable/ic_backblue_"
        android:layout_marginTop="@dimen/dp_35"
        android:layout_marginLeft="@dimen/dp_25"/>

    <TextView
        android:id="@+id/TVcmbDaters1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp_35"
        android:text="@string/daters_Text"
        android:textColor="@color/blacklight"
        android:textSize="@dimen/sp_25"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toRightOf="@id/prevoiusBtn"
        app:layout_constraintTop_toBottomOf="@id/prevoiusBtn" />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@id/TVcmbDaters1"
        app:layout_constraintRight_toRightOf="@id/TVcmbDaters1"
        android:src="@drawable/twohand"
        android:layout_marginRight="@dimen/dp_100"/>

    <TextView
        android:id="@+id/TVcmbDaters2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp_35"
        android:layout_marginLeft="28dp"
        android:layout_marginTop="48dp"
        android:layout_marginEnd="32dp"
        android:layout_marginRight="32dp"
        android:layout_marginBottom="358dp"
        android:text="@string/daters_Text2"
        android:textColor="@color/blacklight"
        android:textSize="@dimen/sp_25"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/nextPageBtn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toLeftOf="@id/TVcmbDaters1"
        app:layout_constraintTop_toBottomOf="@id/TVcmbDaters1"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/nextPageBtn"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_60"
        android:layout_margin="@dimen/dp_25"
        android:background="@drawable/rectanglebutton"
        android:backgroundTint="@color/appBlue"
        android:text="@string/sounds_good"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_20"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_editor_absoluteX="25dp" />






</androidx.constraintlayout.widget.ConstraintLayout>