<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".cmbDaters">

    <ImageView
        android:id="@+id/iVCmbDaters"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:src="@drawable/ic_backblue_"
        android:layout_marginTop="@dimen/dp_35"
        android:layout_marginLeft="@dimen/dp_25"/>
    <TextView
        android:id="@+id/TVcmbDaters1"
        android:textSize="@dimen/sp_25"
        android:layout_margin="@dimen/dp_35"
        android:layout_width="match_parent"
        android:textColor="@color/blacklight"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/iVCmbDaters"
        app:layout_constraintLeft_toRightOf="@id/iVCmbDaters"
        android:text="@string/daters_Text"/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@id/TVcmbDaters1"
        app:layout_constraintRight_toRightOf="@id/TVcmbDaters1"
        android:src="@drawable/twohand"
        android:layout_marginRight="@dimen/dp_100"/>
    <TextView
        android:id="@+id/TVcmbDaters2"
        android:textSize="@dimen/sp_25"
        android:layout_margin="@dimen/dp_35"
        android:layout_width="match_parent"
        android:textColor="@color/blacklight"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/TVcmbDaters1"
        app:layout_constraintLeft_toLeftOf="@id/TVcmbDaters1"
        android:text="@string/daters_Text2"/>
    <View
        android:id="@+id/daterView1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_2"
        app:layout_constraintTop_toBottomOf="@id/TVcmbDaters2"
        android:background="@color/light"
        android:layout_margin="@dimen/dp_35"/>
    <Button
        android:id="@+id/BtnCMB"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_60"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@drawable/rectanglebutton"
        android:backgroundTint="@color/appBlue"
        android:layout_margin="@dimen/dp_25"
        android:text="@string/sounds_good"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_20"/>






</androidx.constraintlayout.widget.ConstraintLayout>