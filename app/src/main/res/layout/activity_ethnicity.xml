<?xml version="1.0" encoding="utf-8"?>
<!-- by Nishant Rishab  -->
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Ethnicity">

    <TextView
        style="@style/heading"
        android:text="@string/text_ethnicity"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        style="@style/back_arrow_btn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline1"
        style="@style/left_right_guide"
        app:layout_constraintGuide_begin="@dimen/dp_120"
        />
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline2"
        style="@style/top_bottom_guide"
        app:layout_constraintGuide_begin="@dimen/dp_30" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline3"
        style="@style/top_bottom_guide"
        app:layout_constraintGuide_begin="@dimen/dp_375" />
    <Button
        style="@style/btn"
        android:text="@string/btn_next"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ScrollView
        android:layout_width="@dimen/dp_340"
        android:layout_height="@dimen/dp_610"
        app:layout_constraintTop_toBottomOf="@+id/guideline1"
        app:layout_constraintEnd_toStartOf="@+id/guideline3"
        app:layout_constraintStart_toStartOf="@+id/guideline2"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:orientation="vertical" >
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/etA"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_20"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:layout_marginTop="@dimen/dp_55"
                    android:layout_marginEnd="@dimen/dp_20"
                    android:padding="@dimen/dp_12"
                    android:text="@string/asian"
                    android:textSize="@dimen/sp_25"/>
                <RadioButton
                    android:id="@+id/etA1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_70"
                    android:checked="false"
                    android:layout_marginHorizontal="@dimen/dp_270"/>
                <TextView
                    android:id="@+id/etB"
                    android:layout_below="@id/etA"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_20"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:layout_marginTop="@dimen/dp_30"
                    android:layout_marginEnd="@dimen/dp_20"
                    android:padding="@dimen/dp_12"
                    android:text="@string/arab"
                    android:textSize="@dimen/sp_25"/>
                <RadioButton
                    android:id="@+id/etB1"
                    android:layout_below="@+id/etA1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_55"
                    android:checked="false"
                    android:layout_marginHorizontal="@dimen/dp_270"/>
                <TextView
                    android:id="@+id/etC"
                    android:layout_below="@id/etB"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_20"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:layout_marginTop="@dimen/dp_30"
                    android:layout_marginEnd="@dimen/dp_20"
                    android:padding="@dimen/dp_12"
                    android:text="@string/african_descent"
                    android:textSize="@dimen/sp_25"/>
                <RadioButton
                    android:id="@+id/etC1"
                    android:layout_below="@+id/etB1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_55"
                    android:checked="false"
                    android:layout_marginHorizontal="@dimen/dp_270"/>
                <TextView
                    android:id="@+id/etD"
                    android:layout_below="@id/etC"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_20"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:layout_marginTop="@dimen/dp_30"
                    android:layout_marginEnd="@dimen/dp_20"
                    android:padding="@dimen/dp_12"
                    android:text="@string/hispanic_latino"
                    android:textSize="@dimen/sp_25"/>
                <RadioButton
                    android:id="@+id/etD1"
                    android:layout_below="@+id/etC1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_55"
                    android:checked="false"
                    android:layout_marginHorizontal="@dimen/dp_270"/>
                <TextView
                    android:id="@+id/etE"
                    android:layout_below="@id/etD"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_20"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:layout_marginTop="@dimen/dp_30"
                    android:layout_marginEnd="@dimen/dp_20"
                    android:padding="@dimen/dp_12"
                    android:text="@string/native_american"
                    android:textSize="@dimen/sp_25"/>
                <RadioButton
                    android:id="@+id/etE1"
                    android:layout_below="@+id/etD1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_55"
                    android:checked="false"
                    android:layout_marginHorizontal="@dimen/dp_270"/>
                <TextView
                    android:id="@+id/etF"
                    android:layout_below="@id/etE"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_20"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:layout_marginTop="@dimen/dp_30"
                    android:layout_marginEnd="@dimen/dp_20"
                    android:padding="@dimen/dp_12"
                    android:text="@string/pacific_islander"
                    android:textSize="@dimen/sp_25"/>
                <RadioButton
                    android:id="@+id/etF1"
                    android:layout_below="@+id/etE1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_55"
                    android:checked="false"
                    android:layout_marginHorizontal="270dp"/>
                <TextView
                    android:id="@+id/etG"
                    android:layout_below="@id/etF"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_20"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:layout_marginTop="@dimen/dp_30"
                    android:layout_marginEnd="@dimen/dp_20"
                    android:padding="@dimen/dp_12"
                    android:text="@string/south_asian"
                    android:textSize="@dimen/sp_25"/>
                <RadioButton
                    android:id="@+id/etG1"
                    android:layout_below="@+id/etF1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_55"
                    android:checked="false"
                    android:layout_marginHorizontal="270dp"/>
                <TextView
                    android:id="@+id/etH"
                    android:layout_below="@id/etG"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_20"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:layout_marginTop="@dimen/dp_30"
                    android:layout_marginEnd="@dimen/dp_20"
                    android:padding="@dimen/dp_12"
                    android:text="@string/white_caucasian"
                    android:textSize="@dimen/sp_25"/>
                <RadioButton
                    android:id="@+id/etH1"
                    android:layout_below="@+id/etG1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_55"
                    android:checked="false"
                    android:layout_marginHorizontal="@dimen/dp_270"/>
                <TextView
                    android:id="@+id/etI"
                    android:layout_below="@id/etH"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_20"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:layout_marginTop="@dimen/dp_30"
                    android:layout_marginEnd="@dimen/dp_20"
                    android:padding="@dimen/dp_12"
                    android:text="@string/nepali"
                    android:textSize="@dimen/sp_25"/>
                <RadioButton
                    android:id="@+id/etI1"
                    android:layout_below="@+id/etH1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_55"
                    android:checked="false"
                    android:layout_marginHorizontal="270dp"/>
                <TextView
                    android:id="@+id/etJ"
                    android:layout_below="@id/etI"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_20"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:layout_marginTop="@dimen/dp_30"
                    android:layout_marginEnd="@dimen/dp_20"
                    android:padding="@dimen/dp_12"
                    android:textSize="@dimen/sp_25"/>
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>